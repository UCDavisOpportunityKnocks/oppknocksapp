import 'package:flutter/material.dart';

import 'package:hexcolor/hexcolor.dart';
import 'package:oppknocksapp/models/models.dart';
import 'package:oppknocksapp/shared/constants.dart';

import '../../../mq.dart';

class Jobs extends StatelessWidget {
  Jobs({
    Key? key,
  }) : super(key: key);

  final List<MGroceries> _items = [
    MGroceries(
      title: 'Recently Added',
      color: HexColor('#F8A44C').withOpacity(0.15),
      url: 'assets/images/recent.png',
    ),
    MGroceries(
      title: 'Urgently Hiring',
      color: kPrimaryColor.withOpacity(0.15),
      url: 'assets/images/urgent.png',
    ),
  ];

  @override
  Widget build(BuildContext context) {
    return Container(
      height: MQuery.height * 0.13,
      child: ListView.separated(
        padding: const EdgeInsets.symmetric(horizontal: 15),
        scrollDirection: Axis.horizontal,
        itemCount: _items.length,
        itemBuilder: (_, i) => Container(
          padding: const EdgeInsets.symmetric(horizontal: 10),
          width: MQuery.width * 0.6,
          decoration: BoxDecoration(
            color: _items[i].color,
            borderRadius: BorderRadius.circular(15),
          ),
          child: Row(
            children: [
              Image.asset(_items[i].url!),
              SizedBox(width: 10),
              Text(_items[i].title!, style: kTitleStyle),
            ],
          ),
        ),
        separatorBuilder: (_, __) => SizedBox(width: 10),
      ),
    );
  }
}
